{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": false,
        "rootDir": "./",
        "outDir": "./build",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["./"],
    "exclude": ["node_modules", "build"],
    "watch": true,
    "paths": {
        "@/*": ["./*"]
    }
}
